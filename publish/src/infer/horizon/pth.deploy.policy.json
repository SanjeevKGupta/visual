{
    "label": "deploy-policy-pth-$ARCH",
    "description": "A deploy policy for pth on $ARCH",
    "service": {
	"name": "$EDGE_OWNER.$EDGE_DEPLOY.pth",
	"org": "$HZN_ORG_ID",
	"arch": "$ARCH",
	"serviceVersions": [
	    {
		"version": "1.0.0",
		"priority":{}
	    }
	]
    },
    "properties": [
    ],
    "constraints": [
	"owner == $EDGE_OWNER",
	"deploy == $EDGE_DEPLOY",
	"pth == true"
    ],
    "userInput": [
	{
	    "serviceOrgid": "$HZN_ORG_ID",
	    "serviceUrl": "$EDGE_OWNER.$EDGE_DEPLOY.pth",
	    "serviceVersionRange": "[0.0.0,INFINITY)",
	    "inputs": [
		{ "name" : "DEVICE_ID", "value" : "DEVICE_ID"  },
		{ "name" : "DEVICE_NAME", "value" : "DEVICE_NAME"  }
	    ]
	}
    ]
}
